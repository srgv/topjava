<configuration>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %class{50}.%M:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="summary" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%boldGreen(%msg)</pattern>
        </encoder>
    </appender>
    <logger name="summary" level="INFO" additivity="false">
        <appender-ref ref="summary"/>
    </logger>

    <logger name="org.postgresql" level="debug"/>
    <logger name="org.springframework.jdbc" level="info"/>
    <logger name="ru.javawebinar.topjava" level="debug"/>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>